<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ant_saved_device_connected"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:src="@drawable/save_src"
        android:enabled="false"
        android:scaleType="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ant_saved_device_id_title"
        android:contentDescription="@string/ant_icon"/>
    <TextView
        android:id="@+id/ant_saved_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/ant_connected_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/ant_saved_device_name"
        app:layout_constraintBottom_toBottomOf="@id/ant_saved_device_name"
        app:layout_constraintStart_toEndOf="@id/ant_saved_device_name"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_antplus_icon"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/ant_saved_device_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:textSize="13dp"
        android:text="@string/device_id"
        app:layout_constraintTop_toBottomOf="@id/ant_saved_device_name"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ant_saved_device_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ant_saved_device_id_title"
        app:layout_constraintTop_toTopOf="@id/ant_saved_device_id_title"
        app:layout_constraintBottom_toBottomOf="@id/ant_saved_device_id_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>