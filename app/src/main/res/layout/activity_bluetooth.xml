<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/bt_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_message1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bt_message1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bt_device"
        app:layout_constraintBottom_toTopOf="@id/bt_message2"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bt_message2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bt_message1"
        app:layout_constraintBottom_toTopOf="@id/bt_message3"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bt_message3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bt_message2"
        app:layout_constraintBottom_toTopOf="@id/bt_message4"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bt_message4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bt_message3"
        app:layout_constraintBottom_toTopOf="@id/bt_flags"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bt_flags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_message4"
        app:layout_constraintBottom_toTopOf="@id/bt_misc"/>
    <Button
        android:id="@+id/bt_zero_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="ZERO"/>

    <LinearLayout
        android:id="@+id/bt_misc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_message4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bt_message3"
            app:layout_constraintBottom_toTopOf="@id/ll_speed"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Power"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_power"
            app:layout_constraintBottom_toTopOf="@id/ll_crankCnt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Speed"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/speed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_crankCnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_speed"
            app:layout_constraintBottom_toTopOf="@id/ll_crankTime"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Crank Count"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/crankCnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_crankTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_crankCnt"
            app:layout_constraintBottom_toTopOf="@id/ll_cadence"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Crank Time"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/crankTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_cadence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ll_crankTime"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cadence"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cadence"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>