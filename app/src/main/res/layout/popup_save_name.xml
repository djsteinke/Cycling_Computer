<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/main_saveName"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/bg_round_corner_solid"
    android:backgroundTint="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/activityNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="10"
        android:inputType="textCapSentences"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="170dp"
        android:hint="@string/activity_name"
        android:background="@drawable/bg_round_corner_solid"
        android:backgroundTint="@color/white"
        android:selectAllOnFocus="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
    </EditText>

    <EditText
        android:id="@+id/activityDescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/activityNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="10"
        android:inputType="textCapSentences"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="170dp"
        android:hint="@string/activity_description"
        android:background="@drawable/bg_round_corner_solid"
        android:backgroundTint="@color/white"
        android:selectAllOnFocus="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus/>
    </EditText>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner_solid"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/activityDescText"
        app:layout_constraintTop_toBottomOf="@id/activityDescText"
        app:layout_constraintBottom_toTopOf="@id/fl_saveName">
        <CheckBox
            android:id="@+id/cb_trainer"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainer" />
        <CheckBox
            android:id="@+id/cb_commute"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commute" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_saveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/activityDescText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/activityDescText"
        app:layout_constraintEnd_toStartOf="@id/fl_deleteName">
        <ImageButton
            android:id="@+id/button_saveName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_save_black_24dp"
            app:tint="@color/white"
            android:background="@drawable/circle_outline"
            android:backgroundTint="@color/white"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_deleteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/fl_saveName"
        app:layout_constraintBottom_toBottomOf="@id/fl_saveName"
        app:layout_constraintEnd_toStartOf="@id/fl_cancelName"
        app:layout_constraintStart_toEndOf="@id/fl_saveName">
        <ImageButton
            android:id="@+id/button_deleteName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete_black_24dp"
            app:tint="@color/white"
            android:background="@drawable/circle_outline"
            android:backgroundTint="@color/white"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_cancelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/fl_saveName"
        app:layout_constraintBottom_toBottomOf="@id/fl_saveName"
        app:layout_constraintEnd_toEndOf="@id/activityNameText"
        app:layout_constraintStart_toEndOf="@id/fl_deleteName">
        <ImageButton
            android:id="@+id/button_canelName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_black_24dp"
            app:tint="@color/white"
            android:background="@drawable/circle_outline"
            android:backgroundTint="@color/white"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>